{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with final features (dev)",
            "type": "shell",
            "command": "~/.cargo/bin/cargo build --color=always --profile dev --features final",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "test with final features (dev)",
            "type": "shell",
            "command": "~/.cargo/bin/cargo test --color=always --profile dev --features final",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "run leopold with final features (dev)",
            "type": "shell",
            "command": "~/.cargo/bin/cargo run --color=always --profile dev --features final -- --config /home/parity/authority.toml",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "clean target folder",
            "type": "shell",
            "command": "~/.cargo/bin/cargo clean",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}